public class funkcje {
  public static void main(String[] args){
	System.out.println("Spalanie przy spotowej jeździe: "+spalanieSport(100));
	System.out.println("Spalanie przy normalnej jeździe: "+spalanieNorm(100));
	System.out.println("Spalanie przy eko drivingu: "+spalanieEko(100));
	System.out.println("Spalanie przy jeździe na rowerze: "+spalanieRower(100));
	}
	public static double spalanieSport (double a){
		
		double spalanieAuta=0.15*a; 
		return spalanieAuta;
	}
	public static double spalanieNorm (double b){
		
		double spalanieAuta1=0.10*b; 
		return spalanieAuta1;
	}
	public static double spalanieEko (double c){
		
		double spalanieAuta2=0.08*c; 
		return spalanieAuta2;
	}
	public static double spalanieRower(double d){
		double spalanieRower=0*d;
		return spalanieRower;
	}
}
